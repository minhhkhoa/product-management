extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3
    .row 
      .col-12
        +box-head("Chat")

    .row
      .col-12
        //- cờ để biets dc ai chat
        .chat(my-id=user.id)
          //- .inner-head
          //- .inner-avatar EY
          //- .inner-name Em Yeu

          .inner-body
            each chat in chats  
              div(class=(chat.user_id == user.id?"inner-outgoing":"inner-incoming"))
                //- Neu Ko phai ng dang login gui tn thi moi hien ten
                if(chat.user_id != user.id)
                  .inner-name #{chat.infoUser.fullName}
                .inner-content
                  | #{chat.content}

            div(class="inner-list-typing")
              div(class="box-typing")
                div(class="inner-name") Nguyễn Thị Quỳnh
                div(class="inner-dots")
                  span
                  span
                  span
              div(class="box-typing")
                div(class="inner-name") Nguyễn Minh Khoa
                div(class="inner-dots")
                  span
                  span
                  span
          .inner-foot 
            form(
              class="inner-form"
              action=""
            )
              input(
                type="text"
                placeholder="Nhập nội dung..."
                name="content"
              )
              span(class="button-icon btn btn-light mx-3")
                <i class="fa-regular fa-face-smile" style="font-size:35px;"></i>
              button 
                i.fa-solid.fa-paper-plane


  div(class="tooltip" role="tooltip")
    emoji-picker(class="light")
